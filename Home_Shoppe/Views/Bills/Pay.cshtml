@model IEnumerable<Home_Shoppe.Models.Cart>

@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm())
{

    <br />
    <h2 style="text-align:center">Bill</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })




    <div class="form-group">
        Receiver Name
        <div class="col-md-10">
            <input type="text" name="ReceiverName" style="background-color:white; width:200px;">
        </div>
    </div>
    <div class="form-group">
        Phone
        <div class="col-md-10">
            <input type="text" name="Phone" style="background-color:white; width:200px;">
        </div>
    </div>
    <div class="form-group">
        Dilivery Address
        <div class="col-md-10">
            <input type="text" name="DiliveryAddress" style="background-color:white; width:200px;">
        </div>
    </div>

    <div class="form-group">
        Note
        <div class="col-md-10">
            <input type="text" name="Note" style="background-color:white; width:200px;height:100px">
        </div>
    </div>

    <br />

    <table width="80%" border="1">
        <thead>
            <tr>
                <td style=" font-weight:bold">Product</td>
                <td style=" font-weight:bold">Quantity</td>
                <td style=" font-weight:bold">Total</td>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    
                    <td>@item.Product.NameProduct </td>
                    <td>@item.Quantity</td>
                    <td>@item.Total</td>
                </tr>

            </tbody>

        }
        <br />
        <tfoot>

            <tr>
                <td colspan="2" style="text-align:right; font-weight:bold;color:red;top:10px">Total:</td>
                <td style="text-align:left;top:10px">
                    $@ViewBag.TotalPrice
                    <input type="hidden" name="TotalPayment" value="@ViewBag.TotalPrice">
                    <input type="hidden" name="TotalQuantity" value="@ViewBag.TotalQuantity">
                </td>
            </tr>
            <br />
            <tr>
                <td></td>
                <td><input type="submit"  value="Pay" class="button" /></td>
                <td></td>

            </tr>
        </tfoot>
    </table>




}

